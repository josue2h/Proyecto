<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTeal"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="@dimen/interlineado"
            android:text="@string/text_input"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorWhite" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/back_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:background="@color/colorAccent"
        android:gravity="center_horizontal"
        android:padding="@dimen/border">

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:hint="@string/hint_ip"
            android:clickable="true"
            android:gravity="center"
            android:inputType="number"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_margin="@dimen/border"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:layout_marginTop="@dimen/separation"
        android:background="@color/colorGrey">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/height"
            android:layout_weight="1.5"
            android:text="NÂª subredes :"
            android:textColor="@color/colorTeal"
            android:background="@color/colorWhite"
            android:gravity="center_vertical|center_horizontal"/>
        <TextView
            android:id="@+id/number_subnet"
            android:layout_width="0dp"
            android:layout_height="@dimen/height"
            android:layout_weight="2"
            android:background="@color/colorWhite"
            android:clickable="true"
            android:text="4"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/colorPrimary" />
        <Button
            android:id="@+id/btn_modify"
            android:layout_width="0dp"
            android:layout_height="@dimen/height"
            android:layout_weight="1.5"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorTeal"
            android:gravity="center_vertical|center_horizontal"
            android:text="Modificar"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_required_host"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/separation">
        <ListView
            android:id="@+id/lv_required_host"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
    <!--<Button
        android:id="@+id/btn_calculate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorTeal"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/separation"/>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGrey"
        android:layout_marginTop="@dimen/separation"/>


</LinearLayout>